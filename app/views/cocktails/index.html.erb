<%# Banner %>
<div class="banner mb-3 text-white" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.thehoneycombers.com/wp-content/uploads/sites/2/2015/11/IMG_0037.jpg);">
  <div class="container">
    <h1>Welcome to Crazy Cocktail Bar!</h1>
    <p>If you're not crazy yet, you need another drink ;)</p>
  </div>
</div>
<div class="min-vh-100">
<%= link_to '+ Add a new Cocktail', new_cocktail_path, class: 'btn btn-primary ml-5 mt-3' %>
<br>
<br>
<div class="cards">
  <% @cocktails.each do |c| %>
    <div class="card-category flex-column" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= render_photo(c, false) %>)"  width="400" height="400">
      <%= link_to c.name, cocktail_path(c), class: 'text-white' %>
      <%= link_to 'delete', cocktail_path(c), method: :delete, class: 'font-italic  text-white small' %>
    </div>
  <% end %>
</div>
</div>
