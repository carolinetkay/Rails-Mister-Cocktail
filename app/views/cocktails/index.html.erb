<%# Banner %>
<div class="banner mb-3 text-white" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.thehoneycombers.com/wp-content/uploads/sites/2/2015/11/IMG_0037.jpg);">
  <div class="container">
    <h1>Welcome to Crazy Cocktail Bar!</h1>
    <p>If you're not crazy yet, you need another drink ;)</p>
  </div>
</div>

<%= link_to '+ Add a new Cocktail', cocktails_new_path, class: 'btn btn-primary ml-5 mt-3' %>
<br>
<br>
<div class="cards">
<% @cocktails.each do |c| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/400x300/?cocktail)">
  <%= link_to c.name, cocktail_path(c) %>
  </div>
<% end %>
</div>

